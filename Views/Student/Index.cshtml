@model List<Student>
@{
    ViewData["Title"] = "Enrolled students";
  }
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h4>Student List</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Student" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add New Student</a>
        </div>
    </div>
     
     <table class="table table-bordered table-striped">
         <thead>
             <tr>
                 <th>Id</th>
                 <th>Name</th>
                 <th>Phone</th>
                 <th>Action</th>
             </tr>
          </thead>
         <tbody>
            @foreach(Student student in Model)
{
                    <tr>
                        <td>@student.Id</td>
                        <td>@student.Name</td>
                        <td>@student.Phone</td>
                        <td><a asp-controller="Student" asp-action="Delete"><i class="fa-solid fa-trash"></i></a></td>
                    </tr>
}
         </tbody>
             
     </table>

</div>
